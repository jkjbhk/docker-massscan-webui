FROM debian:buster-slim
RUN apt-get update
RUN apt-get install git curl nano apache2 php libapache2-mod-php php-mysqli php-xml mysql-server -y
RUN git clone https://github.com/offensive-security/masscan-web-ui
RUN mv masscan-web-ui/* /var/www/html/
RUN cd /var/www/html/
ADD config.php /var/www/html/config.php
EXPOSE 80

CMD ["apache2-foreground"]

WORKDIR /var/www/html/

VOLUME ["/var/www/html/"]
